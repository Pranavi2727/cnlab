#include<stdio.h>
void main() {
int ws,nf,c=0,ack;
printf(“Enter window size: “);
scanf(“%d”,&ws);
printf(“Enter number of frames: “);
scanf(“%d”,&nf);
while(1) {
for(int i=0;i<ws;i++)
{
Printf(“Frame %d is transmitted\n”,c);
if(c==nf-1)
     break;
c+=1;
}
Printf(“Enter last acknowledgment: “);
Scanf(“%d”,&ack);
if(ack==c)
     Break;
else
    c=ack+1;
}
}
